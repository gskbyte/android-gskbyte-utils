<resources>
    <declare-styleable name="DialogSeekBarPreference">
        <attr name="min" format="integer" />
        <attr name="dialogMessage" format="string" />
    </declare-styleable>
    
    <attr name="font" format="string"/>
    <attr name="html_text" format="string"/>
    <attr name="filterColor" format="color"/>
    
    <declare-styleable name="org.gskbyte.view.FontableButton">
        <attr name="font" />
        <attr name="html_text"/>
    </declare-styleable>
    <declare-styleable name="org.gskbyte.view.FontableCheckBox">
        <attr name="font" />
        <attr name="html_text"/>
    </declare-styleable>
    <declare-styleable name="org.gskbyte.view.FontableTextView">
        <attr name="font" />
        <attr name="html_text"/>
    </declare-styleable>
    <declare-styleable name="org.gskbyte.view.FontableEditText">
        <attr name="font" />
    </declare-styleable>
    
    <declare-styleable name="org.gskbyte.view.ProportionalHeightLayout">
        <attr name="heightProportion" format="float"/>
    </declare-styleable>
    
    <declare-styleable name="org.gskbyte.view.AutoHeightImageView">
        <attr name="minHeightProportion" format="float"/>
        <attr name="maxHeightProportion" format="float"/>
    </declare-styleable>
    
    <declare-styleable name="org.gskbyte.view.AutoBackgroundButton">
        <attr name="filterColor"/>
        <attr name="applyFilterToDrawables" format="boolean"/>
        <attr name="applyFilterToText" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="org.gskbyte.view.AutoBackgroundImageButton">
        <attr name="filterColor"/>
        <attr name="applyFilterToImage" format="boolean"/>
    </declare-styleable>
     
    <declare-styleable name="org.gskbyte.view.StepSeekBar">
        <attr name="secondaryThumb" format="integer"/>
        <attr name="smoothFactor" format="integer"/>
        <attr name="smoothed" format="boolean"/>
    </declare-styleable>
   
</resources>

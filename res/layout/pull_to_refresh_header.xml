<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ptr_headerContainer">
    <RelativeLayout android:id="@+id/pull_to_refresh_header_id" style="@style/ptr_header">
        <ImageView android:id="@+id/pull_to_refresh_image" style="@style/ptr_arrow" />
        <ProgressBar android:id="@+id/pull_to_refresh_progress" style="@style/ptr_spinner" />

        <LinearLayout android:id="@+id/pull_to_refresh_textwrapper"
            style="@style/ptr_textwrapper">
            <TextView android:id="@+id/pull_to_refresh_text"
                style="@style/ptr_text" />
            <TextView android:id="@+id/pull_to_refresh_updated_at"
                style="@style/ptr_last_updated" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

